{
  "imports": {
    "@deno/emit": "jsr:@deno/emit@^0.46.0",
    "@std/http": "jsr:@std/http@^1.0.17",
    "@std/assert": "jsr:@std/assert@1",
    "leaflet": "npm:leaflet@^1.9.4",
    "egmap": "./lib/egmap.ts",
    "@deno/esbuild-plugin": "jsr:@deno/esbuild-plugin@^1.2.0",
    "esbuild": "npm:esbuild@^0.25.9"
  },
  "tasks": {
    "start": "deno run --watch --allow-net --allow-read  --allow-run --allow-env --unstable-kv main.ts",
    "build": "deno bundle --platform browser --output public/map.js public/map.ts --minify",
    "build:all": "deno bundle --platform browser --output public/map.js public/map.ts --minify && deno bundle --platform browser --output public/issue34/main.js public/issue34/main.ts --minify",
    "build:prod": "deno task build:all && DENO_ENV=production deno run --allow-net --allow-read --allow-run --allow-env --unstable-kv main.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ]
  },
  "lint": {
    "include": [
      "./**/*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "./**/*.ts"
    ]
  },
  "test": {
    "include": [
      "./**/*.test.ts"
    ]
  }
}