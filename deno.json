{
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.17",
    "@std/assert": "jsr:@std/assert@1",
    "@types/geojson": "npm:@types/geojson@^7946.0.16",
    "leaflet": "npm:leaflet@^1.9.4",
    "egmap": "./lib/egmap.ts",
    "leaflet-draw": "npm:leaflet-draw@^1.0.4",
    "lit": "npm:lit@^3.3.1"
  },
  "tasks": {
    "compile" : {
      "command": "deno bundle --platform=browser --minify public/main.ts -o public/main.js",
      "description": "tsをjsにコンパイルする"
    },
    "start": {
      "command": "deno run --watch --allow-net --allow-read --allow-write --allow-run --allow-env --unstable-kv main.ts",
      "dependencies": ["compile"],
      "description": "アプリケーションを実行する"
    }
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ]
  },
  "lint": {
    "include": [
      "./**/*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "./**/*.ts"
    ]
  },
  "test": {
    "include": [
      "./**/*.test.ts"
    ]
  }
}
